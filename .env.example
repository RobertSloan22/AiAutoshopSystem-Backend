# API Configuration
PORT=3000
NODE_ENV=development

# Vector Storage Services
CHROMA_URL=http://localhost:8000
LOCAL_EMBEDDING_URL=http://localhost:1234

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Feature Flags
USE_LOCAL_STORAGE=true
USE_OPENAI_STORAGE=true
USE_DUAL_STORAGE=true  # Store vectors in both local and OpenAI

# Embedding Models
LOCAL_EMBEDDING_MODEL=text-embedding-nomic-embed-text-v1.5
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database Connection (if using)
SUPABASE_URL=your_supabase_url
SUPABASE_SERVICE_KEY=your_supabase_service_key

# PlateToVin API Configuration
PLATETOVIN_API_KEY=your_platetovin_api_key 